<%= simple_form_for @course do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :privacy, collection: Hash[Event.privacies.map { |k,v| [ k.split('_').first.capitalize, k ]}] %>
  <%= f.input :featured, label: 'Featured course' %>
  <%= f.input :cover_image, as: :file %>
  <%= f.submit 'Create Course', class: 'btn btn-primary' %>
<% end %>
